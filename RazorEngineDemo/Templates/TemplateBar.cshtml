@using System
@namespace RazorEngineDemo.Templates

@{
    int GetDaysSinceUnixEpoch() => (int) (DateTimeOffset.Now - DateTimeOffset.UnixEpoch).TotalDays;
}

<html>

<head>
    <title>Useless information</title>
</head>

<body>
    <p>@GetDaysSinceUnixEpoch() days have passed since the Unix epoch</p>
</body>

</html>